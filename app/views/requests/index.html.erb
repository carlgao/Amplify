<h1>Listing requests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Score</th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.name %></td>
    <td><%= request.score %></td>
    <td><button id="<%= request.id %>" class="request-vote-btn btn success">Upvote</button></td>
    <td></td>
  </tr>
<% end %>
</table>

<br />

<a href="/requests/request_song">Make a Request</a>
