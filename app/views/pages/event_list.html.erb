
<style type="text/css">
    .event_list{
    margin: 10px;
}
.eb_event_list_item{
  padding-top: 20px;
  padding-bottom: 20px;
}
.eb_event_list_title{
  display:block;
  padding-left: 20px;
  width: 400px;
  overflow: hidden;
  font-size: larger;
}
.eb_event_list_date{
  position: absolute;
  left: 30px;
}
.eb_event_list_time{
  position: absolute;
  left: 175px;
}
.eb_event_list_location{
  position: absolute;
  left: 250px;
}

</style>
<script type='text/javascript'>

         jQuery(window).ready(function(){  
            jQuery("#btnInit").click(initiate_geolocation);  
        });  
  
        function initiate_geolocation() {  
            navigator.geolocation.getCurrentPosition(handle_geolocation_query);  
        }  
  
        function handle_geolocation_query(position){  
            alert('Lat: ' + position.coords.latitude + ' ' +  
                  'Lon: ' + position.coords.latitude);  
        }  


</script>


<div class="event_list"><a href="http://eventbrite.com">Loading Events...</a></div>
    <div>  
      <button id="btnInit" >Find my location</button>  
    </div>
</body>
</html>
