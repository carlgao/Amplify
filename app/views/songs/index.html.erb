<h1>Listing songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Requests</th>
    <th>Upvotes</th>
    <th>Downvotes</th>
    <th>Now playing</th>
    <th>Hotness</th>
    <th>Hotcount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.requests %></td>
    <td><%= song.upvotes %></td>
    <td><%= song.downvotes %></td>
    <td><%= song.playing %></td>
    <td><%= song.hotness %></td>
    <td><%= song.hotcount %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

