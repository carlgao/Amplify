<h1>Now Playing</h1>
<% song = @now_playing_song %>
<% if song == nil %>
  <tr>No songs currently playing</tr>
<% else %>
 <table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Requests</th>
    <th>Upvotes</th>
    <th>Downvotes</th>
    <th>Now playing</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tr>
    <td><%= song.id %></td>
    <td><%= song.name %></td>
    <td><%= song.requests %></td>
    <td><%= song.upvotes %></td>
    <td><%= song.downvotes %></td>
    <td><%= song.playing %></td>
    <td><%= link_to 'Show', song %></td>
    <td><button id="<%= song.id %>" class="upvote-btn btn success">Upvote</button></td>
    <td><button id="<%= song.id %>" class="downvote-btn btn danger">Downvote</button></td>
    <!--<td><%= link_to 'Edit', edit_song_path(song) %></td>-->
    <!--<td><%= link_to 'Destroy', song, :confirm => 'Are you sure?', :method => :delete %></td>-->
  </tr>
<% end %>
</table>
<ul data-role="pagination">
	<li class="ui-pagination-prev"><a href="/pages/gallery1.html">Prev</a></li>
	<li class="ui-pagination-next"><a href="/pages/song_request.html">Next</a></li>
</ul>
